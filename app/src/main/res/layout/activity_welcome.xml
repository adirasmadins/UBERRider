
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_panel"
            android:orientation="horizontal"
            >
            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/placetxt"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_weight="5"
                android:layout_margin="10dp"
                android:hint="Enter Pick up Location"
                />
        </LinearLayout>
        <fragment
            android:layout_below="@+id/layout_panel"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="usmanali.uberclone.Welcome_Activity"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            map:cardElevation="10dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:weightSum="10"
            >
        <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/location_switch"
            app:icon_release="@drawable/ic_action_disabled"
            app:icon_press="@drawable/ic_enabled"
            app:base_release_color="#212121"
            app:base_press_color="#FAFAFA"
            app:ball_release_color="#9E9E9E"
            app:ball_press_color="#fff"
            />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="FIND Rider"
                android:id="@+id/findUser"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
